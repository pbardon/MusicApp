<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% unless flash[:errors].nil?  %>
    <%= flash[:errors] %>
  <% end  %>

  <% if logged_in?  %>
    <h3> Hello, <%= current_user.email %>. You are logged in!</h3>

    <%= button_to "Sign Out", session_url, method: :delete %>

  <% else  %>
    <%= link_to "Sign In", new_session_url, class: 'sign-in-up-button' %>
    <%= link_to "Sign Up", new_user_url, class: 'sign-in-up-button' %>
  <% end  %>

<%= yield %>

</body>
</html>
